/*
int factorial(int n){
    if(n==0 || n==1){
        return 1;
    }else{
        return n*factorial(n-1);
    }
    */
int fibo(int x){
    if(x==0){
        return 0;
    }else if(x==1){
        return 1;
    }else{
        return fibo(x-1)+fibo(x-2);
    }

}

int main() {
    int num;
    cout<<"Ingrese el numero";
    cin>>num;
    for(int i=0; i<=num; i++){
        cout<<fibo(i)<<" - ";
    }
    return 0;
}


#include <iostream>
using namespace std;
int main() {
    float n, m, j, resultado;
    cout<<"Ingrese el diviendo";
    cin>>n;
    cout<<"Ingrese el divisor";
    cin>>m;
    cout<<"Ingrese el cociente";
    cin>>j;
    resultado=(n-(m*j));
    cout<<"El residuo es: "<<resultado<<endl;
    return 0;
}
