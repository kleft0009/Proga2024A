//Trabajo N01
#include <iostream>
using namespace std;
int main() {
    cout<<"Convertidor"<<endl;
    float num=0, resultado=0;
    cout<<"Ingrese su valor"<<endl;
    cin>>num;
    resultado=num/1000;
    cout<<"Resultado:"<<resultado<<endl;
    return 0;
}

//Trabajo N02
#include <iostream>
using namespace std;
int main() {
    cout<<"Calculadora"<<endl;
    int num;
    cout<<"Ingrese su valor"<<endl;
    cin>>num;
    if( num>0){
        cout<<"Positivo"<<endl;
    }else if(num=0){
        cout<<"Neutro"<<endl;
    }else{
                cout<<"-"<<endl;

    }
    
    
    return 0;
}


