// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

int main() {
    // Write C++ code here
    int num = 50;
    
    for(int i = 0; i <= num; i++){
        if (i%11==0){
            cout<<i<<" este num es multiplo de 11 "<<endl;
        }
    }

    return 0;
}

// Multiplos de 11
#include <iostream>
using namespace std;

int main() {
    // Write C++ code here
    int inicio = 1;
    int num = 150;
    
    for(int i = inicio; i <= num; i++){
        if (i%11==0){
            cout<<i<<endl;
        }
    }
    return 0;
}


// Vocales
#include <iostream>
using namespace std;

int main() {
    // Write C++ code here
    char letra;
    cout<<" Ingrese una letra: ", cin>>letra;
    
    if( letra == 'a' || letra == 'e' || letra == 'i' || letra == 'o' || letra == 'u' ){
        cout<<" es vocal";
    }else{
                cout<<" no es vocal";

    }
    return 0;
}
