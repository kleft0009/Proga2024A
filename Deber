// Cuenta regresiva

#include <iostream>
using namespace std;

int main() {
    for(int i = 100; i >= 1; --i) {
        cout << i << endl;
    }
    return 0;
}

//Programa

#include <iostream>
using namespace std;

int main() {
    int num;
    do {
        cout << "Ingrese un numero: ";
        cin >> num;
    } while(numero < 1 || numero >= 10);
    cout << "Dentro del rangp: " << numero << endl;
    return 0;
}

//Menu de opciones

#include <iostream>
using namespace std;

int main() {
    int opcion;
    do {
        cout<<"1. Jugar"<<endl;
        cout<<"2. Ayuda"<<endl;
        cout<<"3. Salir";
        cin<<opcion;
        cout << "Seleccione: ";
        cin >> opcion;
    } while(opcion != 3);
    return 0;

//Suma de numero impares

#include <iostream>
using namespace std;

int main() {
    int sum = 0;
    for(int i = 1; i <= 100; i += 2) {
        suma += i;
    }
    cout << "La suma es: " << suma << endl;
    return 0;

//Password

#include <iostream>
#include <string>
using namespace std;

int main() {
    string contrasena = "485";
    string try;
    do {
        cout << "Ingrese la contraseña: ";
        cin >> try;
    } while(try != contrasena);
    cout << "Valido" << endl;
    return 0;
}

