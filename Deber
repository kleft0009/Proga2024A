// Rectangulo

#include <iostream>
using namespace std;

int main() {
    int altura;
    int base;
    cout << "Ingrese la altura: ";
    cin >> altura;
    cout << "Ingrese la base: ";
    cin >> base;
    for(int i = 1; i <= altyra; ++i) {
        for(int j = 1; j <= base; ++j) {
            cout << "*";
        }
        cout << endl;
    }
    return 0;
}

//Factorial

#include <iostream>
using namespace std;

int main() {
    int num;
    int factorial = 1;
    cout << "Ingrese un número: ";
    cin >> num;
    while(num > 1) {
        factorial *= num;
        --num;
    }
    cout << "Respuesta: " << factorial << endl;
    return 0;
}

//Reversa

#include <iostream>
using namespace std;

int main() {
    int num;
    int inverso = 0;
    cout << "Ingrese un número: ";
    cin >> num;
    do {
        inverso = (inverso * 10) + (num % 10);
        num /= 10;
    } while(num > 0);
    cout << "Numero invertido: " << reversa << endl;
    return 0;
}

// Interes compuesto
#include <iostream>
#include <cmath>
using namespace std;
int main() {
    double inversion;
    double interes;
    double saldo;
    int years;
    cout<<"Ingrese el valor: "<<endl;
    cin>>inversion;
    cout<<"Ingrese el interes:"<<endl;
    cin>>interes;
    cout<<"Number of years: "<<endl;
    cin>>years;
    for(int i = 1 ; i <= years ; ++i){
        saldo=inversion * pow((1 + interes/100), i);
        cout<<"Saldo final"<<i<<" "<<saldo<<endl;
    }
    
    return 0;
}
