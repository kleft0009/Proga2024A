// prgrama muestre los numeros pares hasta un numero ingresado
#include <iostream>
using namespace std;
int main() {
    int num;
    do(
        cout<<"Ingresa un numero: ";
        cin>>num;
    )while(num<1 || num>10);
    return 0;
}

