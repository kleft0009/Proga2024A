#include <iostream>
using namespace std;
/* 
tipo nombrefuncion{
     sentencias
}*/
void saludo(){
    cout<<"Hola, bienvenido"<<endl;
}
void division(){
    float a=0, b=0, c=0;
    cout<<"Ingrese el primer numero: ";
    cin>>a;
    cout<<"Ingrese el segundo numero: ";
    cin>>b;
    c=a/b;
    cout<<"Suma: "<<c;
}
int division_2(){
    float a=0, b=0, c=0;
    cout<<"Ingrese el primer numero: ";
    cin>>a;
    cout<<"Ingrese el segundo numero: ";
    cin>>b;
    c=a/b;
    cout<<"Suma: "<<c;
    return c;
}
int main() {
    saludo(); //llamar o invocar  a la funcion
    cout<<"Suma de dos numeros"<<endl;
    division_2();
